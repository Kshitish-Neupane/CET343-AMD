<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- FULL BODY -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cbStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full-Body Strength Training"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- HIIT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cbHiit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvHiit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HIIT Cardio"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- YOGA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cbYoga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvYoga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morning Yoga Flow"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- REST -->
    <CheckBox
        android:id="@+id/cbRest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rest"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnSavePlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:backgroundTint="@color/primaryBlue"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp"/>
</LinearLayout>
